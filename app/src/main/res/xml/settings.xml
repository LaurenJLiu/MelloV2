<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Preference
        android:layout="@layout/fragment_settings" />

    <SwitchPreference
        android:id="@+id/settings_switch_50"
        android:key="switch_status_50"
        android:title="50%"
        android:defaultValue="true" />

    <SwitchPreference
        android:id="@+id/settings_switch_80"
        android:key="switch_status_80"
        android:title="80%"
        android:defaultValue="true" />

    <SwitchPreference
        android:id="@+id/settings_switch_100"
        android:key="switch_status_100"
        android:title="100%"
        android:defaultValue="true" />

    <Preference
        android:layout="@layout/fragment_settings_battery_status"/>


</PreferenceScreen>